// Waybar Configuration

{
    "spacing": 5,
    "layer": "top",
    "width": -10,

    "modules-left": [
        "hyprland/workspaces",
        "hyprland/submap", 
        "hyprland/window"
    ],
    "modules-center": [],
    "modules-right": [
        "tray", 
        "idle_inhibitor", 
        "network",
        "cpu", 
        "pulseaudio", 
        "clock"
    ],

    // ----------------------------------------- //
    // ------- // Modules Configuration //------ //
    // ----------------------------------------- //
    
    "hyprland/workspaces": {
        "format": "{icon} {windows} ",
        "format-window-separator": "  ",
        "window-rewrite-default": "󱃼",
        "window-rewrite": {
            "Alacritty": "",
            "Vivaldi": "󰇧",
            "Code": "󰨞",
            "discord": "󰙯",
            "pavucontrol": ""
        },
    },

    "hyprland/submap": {
        "format": " 󰡱 : <span style=\"italic\">{}</span> ",
        "max-length": 50
    },

    "hyprland/window": {
        "format": "{}",
        "min-length": 30,
        "max-length": 30,
        "rewrite": {
            "(.*) - Vivaldi":"󰇧 $1",
            "(.*) - Visual Studio Code": "󰨞 $1",
            "(.*) - Discord":"󰙯 $1"
        }
    },

    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 32,
        "icon-theme": "",
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close"
    },
    
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated":"󰈈",
            "deactivated":"󰈉"
        }
    },

    "tray": {
        "icon-size": 20,
        "spacing": 10
    },

    "clock": {
        "interval": 1,
        "format": "{:%H:%M:%S}  ",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}  "
    },
    "cpu": {
        "interval": 1,
        "format": "{icon0}{icon1}{icon2}{icon3}{icon4}{icon5}{icon6}{icon7}{icon8}{icon9}{icon10}{icon11}{icon12}{icon13}{icon14}{icon15}",
        "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█"],
        "tooltip": true
    },

    "network": {
        "interface": "eno1*", 
        "format-wifi": "{signalStrength}% ",
        "format-ethernet": "󰈀",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "Disconnected ⚠",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr} {essid}",
        "interval": 5
    },
    "pulseaudio": {
        "format": "{icon}  {format_source}",
        "format-muted": "󰖁  {format_source}",
        "format-bluetooth": "{volume}% {icon}  {format_source}",
        "format-bluetooth-muted": "󰎊 {icon}  {format_source}",
        "format-source": "",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "󱡏",
            "headset": "󰋎",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["      ", "      ", "      ", "󰕾      ", "󰕾      ", "      ", "      " ]
        }
    },

}

